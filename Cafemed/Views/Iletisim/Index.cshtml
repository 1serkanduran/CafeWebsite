@model IEnumerable<Cafemed.Models.Model.Iletisim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Slider Bilgi</h4>
<a class="btn btn-success" href="/Iletisim/Create/">Yeni Ekle</a>
<table class="table table-striped table-advance table-hover">
    <tbody>
        <tr>
            <th><i class="icon_profile"></i>Adres</th>
            <th><i class="icon_mail_alt"></i>Telefon</th>
            <th><i class="icon_pin_alt"></i> Facebook</th>
            <th><i class="icon_mobile"></i> Instagram</th>
            <th><i class="icon_mobile"></i> Whatsapp</th>
            <th><i class="icon_mobile"></i> Açılış Kapanış Bilgi</th>
            <th><i class="icon_mobile"></i> İşlemler</th>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Adres</td>
            <td>@item.Telefon</td>
            <td>@item.Facebook</td>
            <td>@item.İnstagram</td>
            <td>@item.Whatsapp</td>
            <td>@item.AcilisKapanis</td>
            <td>
                <div class="btn-group">
                    <a class="btn btn-primary" alt="Düzenle" href="/Iletisim/Edit/@item.IletisimId"><i class="icon_plus_alt2"></i></a>
                    <a class="btn btn-danger" href="/Iletisim/Delete/@item.IletisimId" id="deleteBtn"><i class="icon_close_alt2"></i></a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>

