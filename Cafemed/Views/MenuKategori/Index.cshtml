@model IEnumerable<Cafemed.Models.Model.MenuKategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Menü Kategori Bilgi</h4>
<a class="btn btn-success" href="/MenuKategori/Create/">Yeni Ekle</a>
<table class="table table-striped table-advance table-hover">
    <tbody>
        <tr>
            <th><i class="icon_profile"></i>Menü Kategori Id</th>
            <th><i class="icon_profile"></i>Menü Kategori Adı</th>
            <th><i class="icon_profile"></i>İşlemler</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MenuKategoriId</td>
                <td>@item.MenuKategoriAd</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary" alt="Düzenle" href="/MenuKategori/Edit/@item.MenuKategoriId"><i class="icon_plus_alt2"></i></a>
                        <a class="btn btn-danger" href="/MenuKategori/Delete/@item.MenuKategoriId" id="deleteBtn"><i class="icon_close_alt2"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

