@model IEnumerable<Cafemed.Models.Model.Slider>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Slider Bilgi</h4>
<a class="btn btn-success" href="/Slider/Create/">Yeni Ekle</a>
<table class="table table-striped table-advance table-hover">
    <tbody>
        <tr>
            <th><i class="icon_profile"></i>Baslik</th>
            <th><i class="icon_mail_alt"></i>Açıklama</th>
            <th><i class="icon_pin_alt"></i> Fotoğraf</th>
            <th><i class="icon_mobile"></i> İşlemler</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Baslik</td>
                <td>@Html.Raw(item.Aciklama)</td>
                <td><img width="100" height="100" src="@item.ResimURL" /></td>

                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary" alt="Düzenle" href="/Slider/Edit/@item.SliderId"><i class="icon_plus_alt2"></i></a>
                        <a class="btn btn-danger" href="/Slider/Delete/@item.SliderId" id="deleteBtn"><i class="icon_close_alt2"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

