
<footer class="bg1">
    <div class="container p-t-40 p-b-70">
        <div class="row">
            <div class="col-sm-6 col-md-4 p-t-50">
                <!-- - -->
                <h4 class="txt13 m-b-33">Bize Ulaşın</h4>
                <ul class="m-b-70">
                    <li class="txt14 m-b-14">
                        <i class="fa fa-map-marker fs-16 dis-inline-block size19"
                           aria-hidden="true"></i>
                        @ViewBag.Iletisim.Adres
                    </li>
                    <li class="txt14 m-b-14">
                        <i class="fa fa-phone fs-16 dis-inline-block size19"
                           aria-hidden="true"></i>
                        @ViewBag.Iletisim.Telefon
                    </li>
                </ul>
                <!-- - -->
                <h4 class="txt13 m-b-32">Açılış Kapanış Saatleri </h4>>
                <ul>
                    <li class="txt14">@ViewBag.Iletisim.AcilisKapanis</li>
                    <li class="txt14">Every Day</li>
                </ul>
            </div>
            <div class="col-sm-6 col-md-4 p-t-50">
                <!-- - -->
                <h4 class="txt13 m-b-33">Son Blog Yazıları</h4>
                <div class="m-b-25">
                    <ul class="link-list">
                        @foreach (var item in ViewBag.Blog)
                        {
                            <li><a href="/Home/BlogDetay/@item.BlogId">@item.Baslik</a></li>
                        }

                    </ul>
                </div>
            </div>
            <div class="col-sm-6 col-md-4 p-t-50">
                <!-- - -->
                <h4 class="txt13 m-b-38">Galeri</h4>
                <!-- Gallery footer -->
                <div class="wrap-gallery-footer flex-w">
                    @foreach (var item in ViewBag.Galeri)
                    {
                    <a class="item-gallery-footer wrap-pic-w"
                       href="@item.ResimURL"
                       data-lightbox="gallery-footer">
                        <img src="@item.ResimURL" alt="GALLERY" />
                    </a>
                    }
                    


                </div>
            </div>
        </div>
    </div>
    <div class="end-footer bg2">
        <div class="container">
            <div class="flex-sb-m flex-w p-t-22 p-b-22">
                <div class="p-t-5 p-b-5">
                    <a href="#" class="fs-15 c-white">
                        <i class="fa fa-tripadvisor" aria-hidden="true"></i>
                    </a>
                    <a href="#" class="fs-15 c-white">
                        <i class="fa fa-facebook m-l-18" aria-hidden="true"></i>
                    </a>
                    <a href="#" class="fs-15 c-white">
                        <i class="fa fa-twitter m-l-18" aria-hidden="true"></i>
                    </a>
                </div>
                <div class="txt17 p-r-20 p-t-5 p-b-5">
                    Copyright &copy; @DateTime.Now.ToString("Y")
                    with <i class="fa fa-heart"></i> by
                    <a href="https://colorlib.com" target="_blank">SERKNDRN</a>
                </div>
            </div>
        </div>
    </div>
</footer>