@model IEnumerable<Cafemed.Models.Model.Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Ürünler</h4>

<a class="btn btn-success" href="/Urunler/Create/">Yeni Ekle</a>
<table class="table table-striped table-advance table-hover">
    <tbody>
        <tr>
            <th><i class="icon_profile"></i>Ürün Adı</th>
            <th><i class="icon_profile"></i>Ürün Açıklama</th>
            <th><i class="icon_profile"></i>Ürün Fiyat</th>
            <th><i class="icon_profile"></i>Menü Kategori</th>
            <th><i class="icon_profile"></i>İşlemler</th>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.UrunAd</td>
            <td>@item.UrunAciklama</td>
            <td>@item.Fiyat</td>
            <td>@item.MenuKategori.MenuKategoriAd</td>
            <td>
                <div class="btn-group">
                    <a class="btn btn-primary" alt="Düzenle" href="/Urunler/Edit/@item.UrunId"><i class="icon_plus_alt2"></i></a>
                    <a class="btn btn-danger" href="/Urunler/Delete/@item.UrunId" id="deleteBtn"><i class="icon_close_alt2"></i></a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>