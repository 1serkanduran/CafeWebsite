@using PagedList
@using PagedList.Mvc
@using Cafemed.Helper
<section class="section-blog bg-white p-t-115 p-b-123">
    <div class="container">
        <div class="title-section-ourmenu t-center m-b-22">
            <span class="tit2 t-center"> Yeni Haberler </span>
            <h3 class="tit5 t-center m-t-2">Blog</h3>
        </div>
        <div class="row">
            @foreach (var item in ViewBag.Blog)
            {
                <div class="col-md-4 p-t-30">
                    <!-- Block1 -->

                    <div class="blo1">
                        <div class="wrap-pic-blo1 bo-rad-10 hov-img-zoom pos-relative">
                            <a href="/BlogPost/@SeoHelper.ToSeoUrl(item.Baslik).ToLower()-@item.BlogId">
                                <img src="@item.ResimURL" alt="IMG-INTRO" />
                            </a>
                            @*<div class="time-blog">21 Dec 2017</div>*@
                        </div>
                        <div class="wrap-text-blo1 p-t-35">
                            <a href="/BlogPost/@SeoHelper.ToSeoUrl(item.Baslik).ToLower()-@item.BlogId">
                                <h4 class="txt5 color0-hov trans-0-4 m-b-13">
                                    @item.Baslik
                                </h4>
                            </a>
                            <p class="m-b-20">
                                @Html.Raw(item.Icerik.Substring(0, 120))...
                            </p>
                            <a href="/BlogPost/@SeoHelper.ToSeoUrl(item.Baslik).ToLower()-@item.BlogId" class="txt4">
                                Devamını Oku!
                                <i class="fa fa-long-arrow-right m-l-10"
                                   aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>


                </div>
            }
        </div>
    </div>
</section>
