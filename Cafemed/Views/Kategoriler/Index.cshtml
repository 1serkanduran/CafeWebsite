@model IEnumerable<Cafemed.Models.Model.Kategoriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Blog Kategori Bilgi</h4>
<a class="btn btn-success" href="/Kategoriler/Create/">Yeni Ekle</a>
<table class="table table-striped table-advance table-hover">
    <tbody>
        <tr>
            <th><i class="icon_profile"></i>Kategori Id</th>
            <th><i class="icon_profile"></i>Kategori Adı</th>
            <th><i class="icon_profile"></i>İşlemler</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.KategoriId</td>
                <td>@item.KategoriAd</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary" alt="Düzenle" href="/Kategoriler/Edit/@item.KategoriId"><i class="icon_plus_alt2"></i></a>
                        <a class="btn btn-danger" href="/Kategoriler/Delete/@item.KategoriId" id="deleteBtn"><i class="icon_close_alt2"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

