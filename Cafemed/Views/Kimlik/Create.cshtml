
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

<h2>Kimlik Ekle</h2>

<div class="form">
    <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Kimlik/Create/" enctype="multipart/form-data">
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Title" name="Title" minlength="5" type="text" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Anahtar Kelimeler<span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control " id="Keywords" type="text" name="Keywords" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Açıklama</label>
            <div class="col-lg-10">
                <textarea class="ckeditor" name="Description" required></textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Logo<span class="required">*</span></label>
            <div class="col-lg-10">
                <input type="file" class="form-control" required id="LogoURL" name="LogoURL" accept=".jpg,.jpeg,.png" />
            </div>
        </div>
        <div class="form-group ">
            <label for="ccomment" class="control-label col-lg-2">Unvan</label>
            <div class="col-lg-10">
                <input class="form-control " id="Unvan" type="text" name="Unvan" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit" id="btn1">Kaydet</button>
                <button class="btn btn-default" type="button" ><a href="/Kimlik/Index/">İptal</a></button>
            </div>
        </div>
    </form>
</div>

<script>
    $('#btn1').click(function () {
        swal("İşlem Başarılı!", "Kaydedildi!", "success");
    });
</script>