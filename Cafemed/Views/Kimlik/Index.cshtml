@model IEnumerable<Cafemed.Models.Model.Kimlik>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h4>Kimlik Bilgi</h4>
<a class="btn btn-success" href="/Kimlik/Create/">Yeni Ekle</a>
<table class="table table-striped table-advance table-hover">
    <tbody>
        <tr>
            <th><i class="icon_profile"></i>Baslik</th>
            <th><i class="icon_calendar"></i>Anahtar Kelimeler</th>
            <th><i class="icon_mail_alt"></i>Açıklama</th>
            <th><i class="icon_pin_alt"></i> Logo</th>
            <th><i class="icon_mobile"></i> Unvan</th>
            <th><i class="icon_mobile"></i> İşlemler</th>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Title</td>
            <td>@item.Keywords</td>
            <td>@Html.Raw(item.Description)</td>
            <td><img width="100" height="100" src="@item.LogoURL" /></td>
            <td>@item.Unvan</td>
            <td>
                <div class="btn-group">
                    <a class="btn btn-primary" alt="Düzenle" href="/Kimlik/Edit/@item.KimlikId"><i class="icon_plus_alt2"></i></a>
                    <a class="btn btn-danger"  href="/Kimlik/Delete/@item.KimlikId" id="deleteBtn"><i class="icon_close_alt2"></i></a>
                </div>
            </td>
        </tr>
        }       
    </tbody>
</table>

<script>
    $('#deleteBtn').click(function () {
        swal("İşlem Başarılı!", "Silindi!", "success");
    });
</script>