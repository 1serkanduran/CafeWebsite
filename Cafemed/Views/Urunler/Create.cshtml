
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Ürün Ekle</h4>


<div class="form">
    <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Urunler/Create/" enctype="multipart/form-data">

        @Html.AntiForgeryToken();
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Ürün Adı<span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control w-25" id="UrunAd" name="UrunAd" type="text" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Ürün Açıklama<span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control w-25" id="UrunAciklama" name="UrunAciklama" type="text" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Ürün Fiyat<span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control w-25" id="Fiyat" name="Fiyat" type="text" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Menü Kategori<span class="required">*</span></label>
            <div class="col-lg-10">
                @Html.DropDownList("MenuKategoriId", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit" id="btn1">Kaydet</button>
                <button class="btn btn-default" type="button"><a href="/Urunler/Index/">İptal</a></button>
            </div>
        </div>


    </form>
</div>
